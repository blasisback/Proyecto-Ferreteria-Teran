@model IEnumerable<WebApp_BotoneraLozanoSAC.Models.Usuario>

@{
    ViewData["Title"] = "Usuarios";
}

<body >
    
<br />
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#">Mantenimiento</a></li>
        <li class="breadcrumb-item active" aria-current="page">Usuarios</li>
    </ol>
</nav>

<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header bg-dark text-white">
                Lista de Usuarios
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-4">
                        <a asp-action="Create"><input type="submit" value="Agregar Nuevo" class="btn btn-sm btn-success" onclick="abrirPopUpForm(null)"><i class="fa fa-plus" aria-hidden="true"></i></a>
                    </div>
                </div>
                <hr />
                <form asp-action="Index" method="get">
                    <div class="form-actions no-color d-flex text-center justify-content-center align-items-center">
                        <a class="btn btn-primary mr-auto p-2 " asp-action="Index">Todos los registros</a>
                        <input class="p-2 form-control col-md-4" type="text" name="searchString" value="@ViewData["CurrentFilter"]" />
                        <input class="p-1 btn btn-success btn-lg m-2" style="height:100%;" type="submit" value="Buscar"/>
                    </div>
                </form>
                <div class="row mt-3">
                    <div class="col-sm-12">
                        <table id="tbdata" class="table-success table table-striped table-bordered nowrap compact" style="width:100%">                            
                            <thead>
                                <tr>
                                    
                                    <th>Rol</th>
                                    <th>Nombre</th>
                                    <th>Apellidos</th>
                                    <th>E-mail</th>
                                    <th>Clave</th>
                                    <th>Tipo Documento</th>
                                    <th>Número Documento</th>                                    
                                    <th class="text-center">Acciones</th>
                                    
                                </tr>
                            </thead>
                            <tbody>
                                @if (ViewBag.Producto == 0)
                                {
                                    <p class="alert-warning"><strong><i class="bi bi-search"></i> "No se encontraron resultados en su búsqueda"</strong></p>
                                }
                                @if (ViewBag.Producto == 1)
                                {
                                    @foreach (var item in Model)

                                    {
                                        <tr>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.IdRolNavigation.Descripcion)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Nombres)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Apellidos)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Correo)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Clave)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TipoDocumento)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.NumeroDocumento)
                                            </td>


                                            <td>
                                                <div class="col text-center">
                                                    <button type="button" class="btn btn-sm btn-primary"><a style="color:white" asp-action="Edit" asp-route-id="@item.IdUsuario"><i class="bi bi-pencil"></i></a></button> |
                                                    <button type="button" class="btn btn-sm btn-success"><a style="color:white" asp-action="Details" asp-route-id="@item.IdUsuario"><i class="bi bi-card-list"></i></a></button> |
                                                    <button type="button" class="btn btn-sm btn-danger"><a style="color:white" asp-action="Delete" asp-route-id="@item.IdUsuario"><i class="bi bi-trash-fill"></i></a></button>

                                                </div>


                                            </td>
                                        </tr>
                                    }
                                }
                                </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="card-footer">
            </div>
        </div>
    </div>
</div>
</body>