<head>
   <style>
       .gradient-custom {
           background: radial-gradient(50% 123.47% at 50% 50%, #00FF94 0%, #720059 100%), linear-gradient(121.28deg, #669600 0%, #FF0000 100%), linear-gradient(360deg, #0029FF 0%, #8FFF00 100%), radial-gradient(100% 164.72% at 100% 100%, #6100FF 0%, #00FF57 100%), radial-gradient(100% 148.07% at 0% 0%, #FFF500 0%, #51D500 100%);
           background-blend-mode: screen, color-dodge, overlay, difference, normal;
       }
   </style>
</head>
<body>
    <section class="gradient-custom">
        <div class="container my-5 py-5">
            <div class="row d-flex justify-content-center py-5">
                <div class="col-md-7 col-lg-5 col-xl-4">
                    <div class="card" style="border-radius: 15px;background-color:#cdcdcd ">
                        <div class="card-body p-15">
                            <form class="">
                                <h4 class="text-center" style="color:grey">Pago con Tarjeta</h4>
                                
                                <hr/>
                                
                                <div class="d-flex justify-content-between information" style="color:grey"><span>Total a Pagar:</span><span id="totalPagar">S/. @ViewBag.Total</span></div>
                                
                                <div class="row">
                                <div class="col-12">
                                    <div class="payment-info">                                        
                                        <span class="type d-block mt-3 mb-1">Tipo de tarjeta</span>
                                        <label class="radio"> <input type="radio" name="card" value="payment" checked> <span><img width="60" src="@Url.Content("~/Imagenes/Tarjetas/master.png")" /></span> </label>
                                        <label class="radio ml-2"> <input type="radio"  > <span><img width="60" src="@Url.Content("~/Imagenes/Tarjetas/visa.png")" /></span> </label>
                                        <div>
                                            <label class="credit-card-label mb-1 mt-2">Nombre del Titular</label>
                                            <input type="text" class="form-control credit-inputs" placeholder="Nombre y Apellido" required/>
                                        </div>
                                        <div>
                                            <label class="credit-card-label mb-1 mt-2">Número de tarjeta</label>
                                            <input type="text" class="form-control credit-inputs" siez="17" placeholder="0000 0000 0000 0000" minlegth="16" maxlength="16" required/>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <label class="credit-card-label mb-1 mt-2">Vigencia</label>
                                                <input type="text" class="form-control credit-inputs" placeholder="MM/YYYY" size="7" id="exp" minlength="7" maxlength="7" required/>
                                            </div>
                                            <div class="col-md-6">                                                
                                                <label class="credit-card-label mb-1 mt-2">CVV</label>
                                                <input type="password" class="form-control" placeholder="&#9679;&#9679;&#9679;" size="1" minlength="3" maxlength="3" required />
                                            </div>
                                        </div>
                                        <hr class="line">
                                        
                                    </div>
                                </div>
                            </div>



                                    <div class="d-flex justify-content-between align-items-center pb-3">
                                
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center pb-3">
                                
                                <button asp-action="CrearBoleta" class="btn btn-info btn-lg btn-rounded">
                                    Pagar
                                    <i class="fas fa-arrow-right"></i>
                                </button>
                               
                                 </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</body>
<script type="text/javascript">
    function validar() {
        //obteniendo el valor que se puso en campo text del formulario
        miCampoTexto = document.getElementById("typeText").value;
        //la condición
        if (miCampoTexto.length == 0) {
            return false;
        }
        return true;
    }
</script>

