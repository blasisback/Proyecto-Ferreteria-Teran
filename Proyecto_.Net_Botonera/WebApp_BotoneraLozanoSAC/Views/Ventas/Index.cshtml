@model IEnumerable<WebApp_BotoneraLozanoSAC.Models.Venta>

@{
    ViewData["Title"] = "Index";

}


<body>

    <br />

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Reportes</a></li>
            <li class="breadcrumb-item active" aria-current="page">Ventas</li>
        </ol>
    </nav>


    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    Listado de Ventas General
                </div>
                <h4>@ViewBag.Date</h4>
                <div class="card-body">
                    <hr />
                    <form asp-action="Index" method="get">

                        <div class="form-actions no-color d-flex text-center justify-content-center align-items-center">

                            <a class="btn btn-primary mr-auto p-2 " asp-action="Index">Mostrar todo</a>

                            <input class="p-2 form-control col-md-4" style="height: 35px;border-color:black" type="date" name="date" value="" />
                            <input class="p-1 btn btn-success btn-lg m-2" style="height:100%;" type="submit" value="Buscar" />
                        </div>

                    </form>
                    <div class="row mt-3">
                        <div class="col-sm-12">
                            <table id="tbdata" class="table-success table table-striped table-bordered nowrap compact" style="width: 100%">
                                <thead>
                                    <tr>
                                        <th>
                                            Codigo
                                        </th>

                                        <th>
                                            Tipo de Documento
                                        </th>
                                        <th>
                                            Cantidad de Producto
                                        </th>
                                        <th>
                                            Costo Total
                                        </th>

                                        <th>
                                            Fecha de Registro
                                        </th>
                                        <th>
                                            Nombre
                                        </th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Codigo)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.TipoDocumento)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CantidadProducto)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TotalCosto)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.FechaRegistro)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.IdUsuarioNavigation.Nombres)
                                            </td>
                                            <td class="text-center">
                                                <button type="button" class="btn btn-sm btn-success"><a style="color:white" asp-action="Details" asp-route-id="@item.IdVenta"><i class="bi bi-card-list"></i></a></button>



                                            </td>
                                        </tr>
                                    }
                                </tbody>

                            </table>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                </div>
            </div>
        </div>
    </div>

</body>
