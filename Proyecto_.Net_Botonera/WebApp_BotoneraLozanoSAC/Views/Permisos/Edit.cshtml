@model WebApp_BotoneraLozanoSAC.Models.Permisos

@{
    ViewData["Title"] = "Edit";
}

<body  >

<h1>Editar Permisos</h1>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">Mantenimiento</li>
        <li class="breadcrumb-item"><a asp-action="Index">Permisos</a></li>
        <li class="breadcrumb-item"><a href="#">Editar</a></li>
    </ol>
</nav>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdPermisos" />
            <div class="form-group">
                <label asp-for="IdRol" class="control-label">Id Rol</label>
                <select asp-for="IdRol" class="form-control" asp-items="ViewBag.IdRol"></select>
                <span asp-validation-for="IdRol" class="text-danger"></span>
            </div>
           <div class="form-group col-6">
                <label asp-for="Activo" class="control-label font-weight-bold">Estado</label>
                <select class="form-select form-select-sm model" asp-for="Activo">
                    <option value="True">Activo</option>
                    <option value="False">No Activo</option>
                </select>
                <span asp-validation-for="Activo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaRegistro" class="control-label">Fecha de Registro</label>
                <input asp-for="FechaRegistro" class="form-control" />
                <span asp-validation-for="FechaRegistro" class="text-danger"></span>
            </div>
            <div class="form-group d-flex justify-content-between-">
                  <a asp-action="Index" class="btn btn-outline-info btn-lg mt-5">Cancelar</a> 
                
                      <div style="margin-left : 80%">
                    <input type="submit" value="Guardar Cambios"  class="btn btn-outline-info btn-lg mt-5" />
                    
            </div>
            </div>

        </form>
    </div>
</div>
</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
