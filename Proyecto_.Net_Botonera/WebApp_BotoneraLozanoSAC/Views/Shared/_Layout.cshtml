<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApp_BotoneraLozanoSAC</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>  
    <nav class="navbar navbar-dark bg-secondary fixed-top">
        <div class="container-fluid">
            <a class="nav-link text-warning" asp-area="" asp-controller="Home" asp-action="Index"><i class="bi bi-house-fill"></i> Inicio</a>           
            <a class="nav-link text-warning" asp-area="" asp-controller="Home" asp-action="Reseña"><i class="bi bi-building"></i> ¿Quienes Somos?</a>
            <a class="text-warning">@ViewBag.Rol @ViewBag.UsuarioActual
                
                </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasDarkNavbar" aria-controls="offcanvasDarkNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="offcanvas offcanvas-end text-bg-secondary" tabindex="-1" id="offcanvasDarkNavbar" aria-labelledby="offcanvasDarkNavbarLabel">
                <div class="offcanvas-header">
                    <h5 class="offcanvas-title" id="offcanvasDarkNavbarLabel"><img src="~/Imagenes/logo-modified.png" width="15%" height="18%"></p>Botonera Lozano SAC</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                </div>
                
                <div class="offcanvas-body">
                    <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Index"><i class="bi bi-house-fill"></i> Inicio</a>
                        </li>                                                
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="" asp-controller="Carritoes" asp-action="Index"><i class="bi bi-cart"></i> Carrito</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="" asp-controller="Kardexes" asp-action="Index"><i class="bi bi-graph-up-arrow"></i> Kardex</a>
                            
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle active" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="bi bi-briefcase-fill"></i> Reportes</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Ventas" asp-action="Index">Ventas</a></li>
                                @*<li><a class="dropdown-item" href="#">Another action</a></li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                <li><a class="dropdown-item" href="#">Something else here</a></li>*@
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle active" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="bi bi-tools"></i> Mantenimiento</a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Roles" asp-action="Index"><i class="bi bi-person-rolodex"></i> Rol</a>
                                </li>
                                <li>                                    
                                    <a class="dropdown-item" asp-area="" asp-controller="Usuarios" asp-action="Index"><i class="bi bi-person-lines-fill"></i> Usuarios</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Categorias" asp-action="Index"><i class="bi bi-window-split"></i> Categorias</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-controller="Productos" asp-action="Index"><i class="bi bi-basket3-fill"></i> Productos</a>
                                </li>
                             </ul>
                        </li>
                    </ul>
                    <hr/>
                    <br />
                    <br />
                    <br />
                    <br />
                    <br />
                    <br />                   
                    <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="" asp-controller="Account" asp-action="Logout"><i class="bi bi-box-arrow-right"></i> Cerrar Sesión</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>      
    </nav>



    <header>
        <div class="collapse" id="navbarHeader">
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-warning border-bottom box-shadow mb-3"
                style="font-weight:bold;">
                <div class="container">                    
                </div>
            </nav>
        </div>
        <div class="navbar navbar-dark bg-dark shadow-sm">
            <div class="container">
                <a href="#" class="navbar-brand d-flex align-items-center">

                    <strong>Botoneera Lozano SAC</strong>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarHeader"
                    aria-controls="navbarHeader" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </div>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <hr />
    <footer class="border-top footer text-muted">
        <div class="container" style="color:dark">
            Todos los Derechos Reservados &copy; 2022 - Botonera Lozano SAC - <a asp-area="" asp-controller="Home"
                asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
        crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)    

</body>

</html>

<hr/>